#answers
  #answers-header
    .subheader
      %h2
        = "#{@question.answers.count}件の回答"
  .answer
    %table
      %tbody
        - @question.answers.each do |answer|
          %tr
            %td{class: :votecell}
              .vote
                = render partial: "answers/votes", locals: {votes: answer.votes, question: answer.question, answer: answer}
                - if answer.marked
                  = link_to cancel_mark_question_answer_path(question_id: @question, answer_id: answer), method: :delete, remote: :true, class: "vote-up vote-on" do
                    %i{class: "glyphicon glyphicon-ok"}
                - else
                  = link_to mark_question_answer_path(question_id: @question, answer_id: answer), method: :put, remote: :true, class: "vote-up vote-off" do
                    %i{class: "glyphicon glyphicon-ok"}
            %td{class: :postcell}
              .post-text
                = simple_format(answer.body)
                %br
              .started
                = "更新日時:#{answer.updated_at.getlocal.strftime("%m月%d日 %H:%M")}"
                |
                = answer.user.user_name
                |
                = link_to_if answer.user == current_user, '編集する', edit_question_answer_path(question_id: @question, answer_id: answer)
          %tr
            %td{class: :votecell}
            %td
              = render partial: "comments/comments", locals: {comments: answer.comments, link_path: "/questions/#{@question.id}/answers/#{answer.id}/comments", parent: answer}
          %tr
            %td{colspan: 2}
              %hr
  %h2
    回答する
  - @answer = @question.answers.build
  = render "answers/form"
